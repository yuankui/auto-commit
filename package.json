{
  "name": "auto-commit",
  "version": "1.0.0",
  "description": "TypeScript Node.js project",
  "main": "dist/index.js",
  "bin": {
    "auto-commit": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublish": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "inquirer": "^12.3.0",
    "openai": "^4.77.0",
    "simple-git": "^3.27.0"
  }
}
